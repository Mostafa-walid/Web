				document
					.querySelectorAll(".delete-button")
					.forEach((button) => {
						button.addEventListener("click", async (event) => {
							const carId = button.getAttribute("data-id");

							const response = await fetch(`/cars/${carId}`, {
								method: "DELETE",
							});
