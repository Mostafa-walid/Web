<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/css/navbar.css" />
		<link rel="stylesheet" href="/css/products.css" />
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
		/>
		<!-- Toastify -->
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
		/>
		<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

		<title>Admin</title>
	</head>

	<body>
		<nav>
			<div class="logo">
				<i class="ri-steering-2-line"></i>
				<a href="/"><span>MAH</span>motors</a>
			</div>
			<div class="menubar">
				<a href="/admin/<%=user._id%>/users">Users</a>
				<a href="/admin/<%=user._id%>/cars">Cars</a>
				<a href="/admin/<%=user._id%>/orders">Orders</a>
				<a href="/logout">Logout</a>
			</div>
		</nav>

		<main>
			<div class="header">
				<h1>Car Management</h1>
				<a class="add-btn" href="/admin/<%=user._id%>/add-car"
					>+ Add Car</a
				>
			</div>
			<br />
			<div id="PorscheCars">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>Type</th>
							<th>Model</th>
							<th>Year of Manufacture</th>
							<th>Price</th>
							<th>Horse Power</th>
							<th>Cylinders</th>
							<th>Transmission</th>
							<th>CC</th>
							<th>Color</th>
							<th>Airbags</th>
							<th>EBD</th>
							<th>ABS</th>
							<th>Wheelbase</th>
							<th>Quantity</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						<% cars.forEach(car => { %>
						<tr id="car-<%= car._id %>">
							<td><%= car.type %></td>
							<td><%= car.model %></td>
							<td><%= car.yearOfManufacture %></td>
							<td><%= car.price %></td>
							<td><%= car.horsePower %></td>
							<td><%= car.cylinders %></td>
							<td><%= car.transmission %></td>
							<td><%= car.cc %></td>
							<td><%= car.color %></td>
							<td><%= car.airbags %></td>
							<td><%= car.EBD ? 'Yes' : 'No' %></td>
							<td><%= car.ABS ? 'Yes' : 'No' %></td>
							<td><%= car.wheelbase %></td>
							<td><%= car.quantity %></td>
							<td>
								<div class="action-btns">
									<button
										onclick="location.href='/admin/<%=user._id%>/cars/<%=car._id%>'"
									>
										edit</button
									><button
										class="delete-button"
										data-id="<%= car._id %>"
									>
										<i class="fa-solid fa-trash"></i>
									</button>
								</div>
							</td>
						</tr>
						<% }) %>
					</tbody>
				</table>
			</div>
		</main>
